# Configuration de la plateforme TaskPlatform
# Copier ce fichier vers .env et ajuster les valeurs

# Database
POSTGRES_DB=taskdb
POSTGRES_USER=taskuser
POSTGRES_PASSWORD=changeme_db_password
DB_HOST=postgres
DB_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password

# Backend API
NODE_ENV=production
API_PORT=4000
JWT_SECRET=changeme_jwt_secret_key_min_32_chars
JWT_EXPIRES_IN=7d

# Frontend
REACT_APP_API_URL=http://localhost/api

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=changeme_grafana_password
GF_SERVER_ROOT_URL=http://localhost:3001

# Prometheus
PROMETHEUS_RETENTION=15d

# Nginx
NGINX_HOST=localhost
NGINX_PORT=80
NGINX_SSL_PORT=443
